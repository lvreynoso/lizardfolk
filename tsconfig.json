{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "source/types/*"
            ]
        }
    },
    "include": [
        "source/**/*",
    ],
}